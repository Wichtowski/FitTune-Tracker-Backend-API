{
    "name": "@fittune/api",
    "version": "1.0.0",
    "type": "module",
    "description": "API for FitTune app",
    "main": "index.js",
    "author": "wichtowski",
    "license": "ISC",
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^22.5.5",
        "date-fns": "^4.0.0-beta.1",
        "eslint": "^9.10.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "husky": "^9.1.6",
        "jsonwebtoken": "^9.0.2",
        "lint-staged": "^15.2.10",
        "prettier": "^3.3.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.5.0"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "mongoose": "^8.6.2"
    },
    "scripts": {
        "start": "nodemon",
        "build": "tsc",
        "serve": "node ./build/index.js",
        "test": "cd tests && npx playwright test",
        "prepare": "is-ci || husky || true",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\""
    },
    "engines": {
        "node": "^16.13 || >= 18"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx,json,css,scss,md}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "**/*.{ts,tsx}": [
        "eslint",
        "prettier --write"
    ]
}
