{
    "compilerOptions": {
        "target": "ES6",
        "module": "Node16",
        "outDir": "dist",
        "baseUrl": "./src",
        "moduleResolution": "Node16",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "build", "dist", "tests"]
}
